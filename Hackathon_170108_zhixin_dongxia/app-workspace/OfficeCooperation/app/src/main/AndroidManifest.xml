<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pktech.cooperation">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".ContextData"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".DeviceRegister"
            android:label="@string/title_activity_device_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ContactRegister"
            android:label="@string/title_activity_contact_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserRegister"
            android:label="@string/title_activity_user_register"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>