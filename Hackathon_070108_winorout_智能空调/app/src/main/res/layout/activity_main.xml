                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rect"
                        android:gravity="center"
                        android:text="智能冰箱"
                        android:textColor="#ffffff"
                        android:textSize="14dp"/>
                </LinearLayout>


                <ImageView
